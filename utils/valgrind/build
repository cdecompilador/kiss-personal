#!/bin/sh -e

# Disable stripping
:> nostrip

patch -p1 < valgrind-3.13.0-malloc.patch

# Bypass ccache
export CC="/usr/bin/cc"
export CXX="/usr/bin/c++"
export CFLAGS="$CFLAGS -fno-stack-protector -no-pie"

./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --mandir=/usr/share/man \
    --infodir=/usr/share/info \
    --localstatedir=/var \
    --without-mpicc \
    --enable-lto=yes

make
make DESTDIR="$1" install
