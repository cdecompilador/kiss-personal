#!/bin/sh -e

export DESTDIR="$1"

patch -p1 < musl-koga-libexecinfo-fix.patch

sbcl --script koga \
    --reproducible-build \
    --package-path="$1" \
    --bin-path=/usr/bin/ \
    --share-path=/usr/share/clasp/ \
    --lib-path=/usr/lib/clasp/

sed -i "s/stdio.h>/stdio.h>\n#include <ucontext.h>/" src/bdwgc/mach_dep.c

ninja -C build
ninja -C build install
