#!/bin/sh -e

for sml in mlton mlkit poly mosml; do
    if command -v $sml; then
        make -j1 with-$sml
        break
    fi
done

make -j1 INSTALLDIR="$1/opt/hamlet" install

mkdir -p "$1/usr/bin/"
cat << EOF > "$1/usr/bin/hamlet"
#!/bin/sh
/opt/hamlet/hamlet \$@
EOF
chmod +x "$1/usr/bin/hamlet"
